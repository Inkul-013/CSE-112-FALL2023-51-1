/// Word capitalization
#include<iostream>
#include<string>
using namespace std;
int main()
{
    string s;
    cin>>s;
    s[0]=towupper (s[0]);
    cout<<s;
}



/// stones on the table

#include<iostream>
#include<string>
using namespace std;
int main()
{
    int n,c=0;
    cin>>n;
    string a;
    cin>>a;
    for(int i=0;i<n;i++)
    {
        if(a[i]==a[i+1])
        {
            c++;
        }
    }
    cout<<c<<endl;
    return 0;
}
